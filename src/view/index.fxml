<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.net.*?>
<?import javafx.scene.web.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.IndexController">
    <stylesheets>
        <URL value="@/styles/main.css" />
        <URL value="@/styles/account-list.css" />
    </stylesheets>
   <center>
      <ListView fx:id="accountList" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <left>
            <Label id="header-title" contentDisplay="CENTER" text="Accounts" BorderPane.alignment="CENTER">
               <font>
                  <Font name="Helvetica" size="24.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="40.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </Label>
         </left>
         <right>
            <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
               <image>
                  <Image url="@/images/seal.png" />
               </image>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="40.0" top="10.0" />
               </BorderPane.margin>
            </ImageView>
         </right>
      </BorderPane>
   </top>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="usButton" mnemonicParsing="false" onAction="#editHandler" styleClass="btn-card"
                          text="Edit in US" />
                  <Button fx:id="euroButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#editHandler" styleClass="btn-card" text="Edit in Euros" />
                  <Button fx:id="yenButton" mnemonicParsing="false" onAction="#editHandler" styleClass="btn-card" text="Edit in Yen" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
               <children>
                  <Button mnemonicParsing="false" styleClass="btn-success" text="Save" />
                  <Button mnemonicParsing="false" onAction="#exitButton" styleClass="btn-danger" text="Exit">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
