<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.net.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditController">
    <stylesheets>
        <URL value="@/styles/main.css" />
        <URL value="@/styles/account-list.css" />
    </stylesheets>
   <bottom>
        <HBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="depositButton" onAction="#depositButtonHandler" mnemonicParsing="false"
                        styleClass="btn-card"
                        text="Deposit" />
                <Button fx:id="withdrawButton" onAction="#withdrawButtonHandler" mnemonicParsing="false" styleClass="btn-card"
                        text="Withdraw" />
                <Button fx:id="dismissButton" onAction="#exitButtonHandler" alignment="CENTER" mnemonicParsing="false"
                        styleClass="btn-danger"
                        text="Dismiss" />
            </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </HBox>
   </bottom>
   <top>
          <HBox alignment="CENTER" spacing="50.0" style="-fx-background-color: #ED1711;" BorderPane.alignment="CENTER">
              <children>
            <VBox>
               <children>
                      <Label fx:id="accountId" text="1000">
                     <styleClass>
                        <String fx:value="small" />
                        <String fx:value="muted" />
                        <String fx:value="account-label-header" />
                     </styleClass>
                  </Label>
                        <Label fx:id="accountName" text="Sang Mercado">
                     <styleClass>
                        <String fx:value="h4" />
                        <String fx:value="account-label-header" />
                     </styleClass>
                  </Label>
               </children>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </VBox>
                  <Label fx:id="accountBalance" text="\$200">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </HBox.margin>
               <styleClass>
                  <String fx:value="h3" />
                  <String fx:value="account-label-header" />
               </styleClass>
            </Label>
              </children>
          </HBox>
   </top>
   <center>
      <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
         <children>
              <TextField fx:id="amountField" />
                <Label fx:id="accountCurrency" styleClass="alert-success" text="Operations in $">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
         </children>
      </HBox>
   </center>
</BorderPane>
